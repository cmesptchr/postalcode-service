{
    "name": "cmesptchr/postcode-service",
    "description": "Pro6pp v2 API implementation",
    "keywords": [
        "postcode",
        "api",
        "pro6pp",
        "php"
    ],
    "homepage": "https://github.com/cmesptchr/postcode-service",
    "license": "MIT",
    "authors": [
        {
            "name": "Christiaan Mes",
            "email": "christiaan@ptchr.nl",
            "homepage": "https://ptchr.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^6.5",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "roave/security-advisories": "dev-master",
        "symfony/var-dumper": "^5.1",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Ptchr\\PostalCodeService\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ptchr\\PostalCodeService\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
